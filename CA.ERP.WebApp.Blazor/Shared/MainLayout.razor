@inherits LayoutComponentBase



<MudThemeProvider Theme="@Theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class=" justify-center">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6">Citi Appliance</MudText>
        <MudAppBarSpacer />
        <LoginDisplay />

    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.Home" Href="/">Home</MudNavLink>
            <MudNavGroup Icon="@Icons.Filled.Storefront" Title="Item Management" Expanded="true">
                <MudNavLink Icon="@Icons.Filled.ReceiptLong" Href="/purchase-order">Purchase Order</MudNavLink>
                <MudNavLink Icon="@Icons.Filled.Receipt" Href="/stock-receive">Stock Receive</MudNavLink>
            </MudNavGroup>
            <MudNavLink Icon="@Icons.Filled.Print" Href="/reports">Reports</MudNavLink>
            <MudNavGroup Icon="@Icons.Filled.Settings" Title="Management" Expanded="true">
                <MudNavLink Href="/management/user">User</MudNavLink>
                <MudNavLink Href="/management/branch">Branch</MudNavLink>
            </MudNavGroup>

        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code{
    MudTheme Theme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#03A9F4",
            Background = "#FAF8F5",
            Secondary = "#FFC107",
            Tertiary = "#998091",
            DarkContrastText = "#03A9F4",
            AppbarText = "#FFFFFF",


            AppbarBackground = "#42A5F5",


        },


    };

    bool _drawerOpen = false;

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
