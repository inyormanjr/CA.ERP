@inherits LayoutComponentBase



<MudThemeProvider Theme="@Theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class=" justify-center">
        <MudText Typo="Typo.h6" >Citi Appliance</MudText>
        <MudAppBarSpacer />
        <LoginDisplay />

    </MudAppBar>

    <MudMainContent>
        <MudContainer>


            <MudPaper>
                <MudGrid Justify="Justify.Center" Class="mt-4">

                    <MudButton Variant="Variant.Text" StartIcon="@Icons.Outlined.Home" Color="Color.Primary" Class="pa-4" Link="/">Home</MudButton>
                    <MudButton Variant="Variant.Text" StartIcon="@Icons.Outlined.ReceiptLong" Color="Color.Primary" Class="pa-4" Link="/purchase-order">P.O.</MudButton>
                    <MudButton Variant="Variant.Text" StartIcon="@Icons.Outlined.Storefront" Color="Color.Primary" Class="pa-4">Item Management</MudButton>
                    <MudButton Variant="Variant.Text" StartIcon="@Icons.Outlined.Receipt" Color="Color.Primary" Class="pa-4" Link="/stock-receive">Stock Receive</MudButton>
                    <MudButton Variant="Variant.Text" StartIcon="@Icons.Outlined.Print" Color="Color.Primary" Class="pa-4">Reports</MudButton>
                    <MudButton Variant="Variant.Text" StartIcon="@Icons.Outlined.Settings" Color="Color.Primary" Class="pa-4" Link="/management/user">Management</MudButton>


                </MudGrid>
            </MudPaper>
        </MudContainer>

                @Body
       
    </MudMainContent>
</MudLayout>

@code{
    MudTheme Theme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#03A9F4",
            Background = "#FAF8F5",
            Secondary = "#FFC107",
            Tertiary = "#998091",
            DarkContrastText = "#03A9F4",
            AppbarText = "#FFFFFF",


            AppbarBackground = "#42A5F5",


        },


    };
}
